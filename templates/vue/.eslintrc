{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["html", "react", "vue"],
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "strict": 1,
    "comma-dangle": [1, "never"],
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "indent": [2, 2]
  }
}
